<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alexgomes_kevinmunar_dipenshah_sws901termproject.AddVitalSigns">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bodyTemperature"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:hint="@string/bodyTemperature" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/enterVitalSigns"
        android:id="@+id/txtEnterVitalSigns"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/heartBeat"
        android:layout_below="@+id/bodyTemperature"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:hint="@string/heartbeat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bloodPressure"
        android:layout_below="@+id/heartBeat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:hint="@string/bloodPressure" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addVitalSigns"
        android:id="@+id/btnAddVitalSigns"
        android:layout_below="@+id/bloodPressure"
        android:layout_alignLeft="@+id/txtEnterVitalSigns"
        android:layout_alignStart="@+id/txtEnterVitalSigns"
        android:layout_marginTop="59dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/Cancel"
        android:layout_alignTop="@+id/btnAddVitalSigns"
        android:layout_alignRight="@+id/txtEnterVitalSigns"
        android:layout_alignEnd="@+id/txtEnterVitalSigns" />
</RelativeLayout>
